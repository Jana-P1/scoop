<%- include("../partials/html-head") %> 
<%- include("../partials/nav") %>

<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
      class="profile-avatar"
      src="<%= profile.avatar %>"
      alt="<%= profile.name %> avatar"
      >
    </div>
  <% } %>
  <h1><%= profile.name %>'s favorite flavors:</h1>
  <ul>
    <% profile.favorites.forEach(favorite => { %>
      <li>
        <%= favorite.name %> 
      </li>
    <% }) %> 
  </ul>   
  
</main>

