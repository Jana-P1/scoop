<%- include("../partials/html-head") %> 
<%- include("../partials/nav") %>

<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
      class="profile-avatar"
      src="<%= profile.avatar %>"
      alt="<%= profile.name %> avatar"
      >
    </div>
  <% } %>
  <h1>What's the Scoop</h1>
  <section>
    <h2>A list of faves:</h2>
    <ul>
      <% profile.favorites.forEach(favorite => { %>
        <li><%= favorite.name %></li>
    <% }) %> 
    </ul>
  </section>  
  
    <% if (profile._id.equals(user?.profile._id)) { %>
    <form action="/profiles/<%= profile._id %>/flavors" method="POST">
      <select name="flavorId" >
        <% flavors.forEach(flavor => { %>
          <option value="<%= flavor._id %>">
            <%= flavor.name %>
          </option>
          <% }) %>
        </select>
        <button type="submit">Add to your favorites</button>
      </form>
    <% } %>
</main>

